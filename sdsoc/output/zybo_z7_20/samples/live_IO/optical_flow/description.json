[
	{
		"example" : "Dense Optical Flow (1PPC)",
		"overview" : "Dense optical flow filter - 1 Pixel Per Clock",
		"board" : [
			"zybo_z7_20"
		],
		"os" : [
			"Linux"
		],
		"system" : {
			"dmclkid" : "0"
		},
		"accelerators" : [
			{
				"name" : "read_optflow_input",
				"location" : "optflow_filter/optical_flow_wrap.cpp",
				"clkid" : "0"
			},
			{
				"name" : "DenseNonPyrLKOpticalFlow",
				"location" : "<PLATFORM>/sw/linux/inc/xfopencv/imgproc/xf_dense_npyr_optical_flow.hpp",
				"clkid" : "0"
			},
			{
				"name" : "write_optflow_output",
				"location" : "optflow_filter/optical_flow_wrap.cpp",
				"clkid" : "0"
			}
		],
		"compiler" : {
			"symbols" : [
				"PLATFORM_ZCU102",
				"__ARM_PCS_VFP",
				"HLS_NO_XIL_FPO_LIB",
				"WITH_SDSOC"
			],
			"includepaths" : [
				"include",
				"optflow_filter"
			],
			"options" : "-Wno-overloaded-virtual -Wno-unused-label -Wno-strict-overflow -Wno-uninitialized -Wno-unused-function -Wno-unused-variable"
		},
		"linker" : {
			"libraries" : [
				"drm",
				"pthread",
				"v4l2subdev",
				"mediactl"
			],
			"options" : "--sysroot=${SYSROOT} -L=/lib -L=/usr/lib -Wl,-rpath-link=${SYSROOT}/lib,-rpath-link=${SYSROOT}/usr/lib"
		}
	}
]
